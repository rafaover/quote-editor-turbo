<%= turbo_frame_tag quote do %>
  <div class="quote">
      <%= link_to quote.name,
                  quote_path(quote),
                  data: { turbo_frame: "_top" } %>
    <div class="quote__actions">
      <%= button_to "Delete",
                    quote_path(quote),
                    method: :delete,
                    # this line uses form: because of the button_to. Inspect.
                    form: { data: { turbo_frame: "_top" } },
                    class: "btn btn--light" %>
      <%= link_to "Edit",
                  edit_quote_path(quote),
                  class: "btn btn--light" %>
    </div>
  </div>
<% end %>
